<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/top_margin_row"
    android:paddingBottom="@dimen/bottom_margin_row">

    <ImageView
        android:id="@+id/row_driver_photo"
        android:layout_width="@dimen/width_photo_profile_row"
        android:layout_height="@dimen/height_photo_profile_row"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/cd_driver_photo"
        android:src="@drawable/ic_driver_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/row_driver_photo"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/row_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/str_name_default"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/row_driver_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_last_name_default" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="76dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>